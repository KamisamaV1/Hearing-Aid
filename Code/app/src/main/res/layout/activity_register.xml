<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/jordy_blue">

    <LinearLayout
        android:id="@+id/linearL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="162dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/fullName"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:background="@drawable/text_border"
            android:gravity="center_vertical"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingStart="12sp"
            android:paddingTop="3sp"
            android:textColor="@color/black"
            android:textColorHint="@color/prussian_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/gainsboro"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:background="@drawable/text_border"
            android:gravity="center_vertical"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingStart="12sp"
            android:paddingTop="3sp"
            android:textColor="@color/black"
            android:textColorHint="@color/prussian_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/gainsboro"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:background="@drawable/text_border"
            android:gravity="center_vertical"
            android:hint="Username"
            android:inputType="text"
            android:paddingStart="12sp"
            android:paddingTop="3sp"
            android:textColor="@color/black"
            android:textColorHint="@color/prussian_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/gainsboro"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <EditText
            android:id="@+id/passWord"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:background="@drawable/text_border"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="12sp"
            android:paddingTop="3sp"
            android:textColor="@color/black"
            android:textColorHint="@color/prussian_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/gainsboro"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <Spinner
            android:id="@+id/Gender"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:background="@drawable/backspin"
            android:tooltipText="From Below"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <EditText
            android:id="@+id/Address"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:background="@drawable/text_border"
            android:gravity="center_vertical"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:paddingStart="12sp"
            android:paddingTop="3sp"
            android:textColor="@color/black"
            android:textColorHint="@color/prussian_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/gainsboro"/>


    </LinearLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginTop="396dp"
        android:backgroundTint="@color/black"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="107dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerButton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By registering you agree to our "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/privacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Privacy Policy."
            android:textColor="@color/prussian_blue"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>